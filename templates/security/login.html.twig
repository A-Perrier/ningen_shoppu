{% extends 'base.html.twig' %}

{% block title %}NingenShoppu | Connexion{% endblock %}

{% block body %}
<div class="breadcrumb-container">
    <div class="breadcrumb flat">
        <a href="{{path('home')}}">
            <img src="{{asset('img/icons/home.svg')}}" alt="Accueil">
        </a>
        <a href="#">Mon compte</a>
        <a href="#" class="active">Connexion</a>
    </div>
</div>

<div class="container">
    <form method="post">

        <h1>Connexion</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn primary adjust-right" type="submit">
            Connexion
        </button>
        <a href="{{path('app_register')}}" class="btn btn-primary-reverse " id="to-register">Pas encore de compte ?</a>
    </form>
</div>


{% include "shared/footer/position.html.twig" %}
{% endblock %}
