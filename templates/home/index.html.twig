{% extends 'base.html.twig' %}

{% block title %}NingenShoppu | Accueil{% endblock %}

{% block body %}
<div class="breadcrumb-container">
    <div class="breadcrumb flat">
        <a href="{{path('home')}}" class="active">
            <img src="{{asset('img/home.svg')}}" alt="Accueil">
        </a>
    </div>
</div>

<main>
    <h1>Derniers arrivages</h1>

    <section class="card-container">
        {% for product in products %}
            <div class="card">
                <img src="" alt="{{product.wording}}">
                <p>{{product.wording}}</p>
                <p>{{product.price}}</p>
                <p>{{product.rating}}</p>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}
