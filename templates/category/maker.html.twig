{% extends 'base.html.twig' %}

{% block title %}NingenShoppu | 

  {% if editing %}
    Modifier {{category.title}}
  {% else %}
    Créer une catégorie
  {% endif %}

{% endblock %}

{% block body %}
  <div class="breadcrumb-container">
    <div class="breadcrumb flat">
        <a href="{{path('home')}}">
            <img src="{{asset('img/icons/home.svg')}}" alt="Accueil">
        </a>
        <a href="#">Administration</a>
        {% if editing %}
          <a href="#" class="active">Modifier {{category.title}}</a>
        {% else %}
          <a href="#" class="active">Nouvelle catégorie</a>
        {% endif %}
    </div>
</div>

  {% if editing %}
    <h1>Modifier la catégorie {{category.title}}</h1>
  {% else %}
    <h1>Nouvelle catégorie</h1>
  {% endif %}
  
  {% form_theme form 'shared/forms/_form_theme.html.twig' %}
  {{form_start(form)}}
    {{form_row(form.title)}}
    {{form_row(form.description)}}

    <button class="btn secondary" type="submit">Envoyer</button>
  {{form_end(form)}}

<script src="{{asset('js/helpers/imageUploadWidget.js')}}"></script>
{% endblock %}
