<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}NingenShoppu | Accueil{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
        <script src="{{asset('js/libs/jquery-3.5.1.js')}}"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <header>
        <nav class="navbar">
            <h1 class="head-title">NingenShoppu</h1>
            <div class="menu-icon">
                <img src="{{asset('img/menu.svg')}}" alt="Menu">
            </div>
            <div class="user-icons">
                <a href="#">
                    <img src="{{asset('img/user.svg')}}" alt="Mon compte">
                </a>
                <a href="#">
                    <img src="{{asset('img/cart.svg')}}" alt="Panier">
                </a>
            </div>
        </nav>
    </header>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
